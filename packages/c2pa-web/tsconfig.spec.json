{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/vitest",
    "types": [
      "vitest/importMeta",
      "vite/client",
      "vitest",
      "@vitest/browser/providers/playwright"
    ],
    "lib": ["DOM"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "module":"NodeNext",
    "moduleResolution": "NodeNext",
  },
  "include": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts",
    "test/**/*.json"
  ],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    }
  ]
}
