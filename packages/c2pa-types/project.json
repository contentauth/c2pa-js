{
  "name": "c2pa-types",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "tags": ["lib"],
  "projectType": "library",
  "sourceRoot": "packages/c2pa-types/src",
  "targets": {
    "build": {
      "cache": true,
      "inputs": [
        "{projectRoot}/**/*",
        "!{projectRoot}/schemas/**/*",
        "!{projectRoot}/types/**/*"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cargo run",
          "pnpm build"
        ],
        "parallel": false,
        "cwd": "{projectRoot}"
      }
    }
  }
}